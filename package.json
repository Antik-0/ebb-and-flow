{
  "name": "ebb-and-flow",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.14.0",
  "scripts": {
    "boot": "pnpm install && pnpm stub",
    "build": "turbo run build --filter=blog",
    "clean": "node ./scripts/cleanup.mjs --del-lock",
    "dev": "turbo run dev --filter=blog",
    "eslint": "eslint --fix --cache --cache-location=.temp/.eslintcache",
    "lint": "biome check --fix && pnpm run eslint",
    "lint:debug": "pnpm dlx @eslint/config-inspector@latest",
    "preinstall": "pnpm dlx only-allow pnpm",
    "preview": "turbo run preview --filter=blog",
    "stub": "turbo run stub"
  },
  "lint-staged": {
    "*.{ts,vue,json}": [
      "pnpm run lint"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@config/eslint": "workspace:*",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "lint-staged": "catalog:",
    "picocolors": "catalog:",
    "turbo": "catalog:",
    "unbuild": "catalog:",
    "unocss": "catalog:"
  }
}
