{
  "name": "ebb-and-flow",
  "version": "2.0.0",
  "description": "潮起潮落的个人博客",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.3",
  "scripts": {
    "boot": "bun install && bun stub",
    "build": "turbo run build --filter=blog",
    "clean": "bun run ./scripts/cleanup.ts",
    "dev": "turbo run dev --filter=blog",
    "eslint": "eslint --fix --cache --cache-location=.temp/.eslintcache",
    "lint": "biome check --fix && bun run eslint",
    "lint:debug": "bunx @eslint/config-inspector@latest",
    "prepare": "bun run --filter blog prepare",
    "preview": "turbo run preview --filter=blog",
    "stub": "turbo run stub",
    "up-deps": "bun run ./scripts/upgrade.ts"
  },
  "lint-staged": {
    "*.{ts,vue,json}": [
      "bun biome check --fix"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@config/eslint": "workspace:*",
    "@config/tsconfig": "workspace:*",
    "@config/unocss": "workspace:*",
    "@types/bun": "catalog:",
    "eslint": "catalog:",
    "lint-staged": "catalog:",
    "ora": "catalog:",
    "picocolors": "catalog:",
    "prompts": "catalog:",
    "turbo": "catalog:",
    "unbuild": "catalog:",
    "unocss": "catalog:"
  },
  "workspaces": {
    "packages": [
      "blog",
      "docs",
      "packages/*",
      "packages/configs/*"
    ],
    "catalog": {
      "@biomejs/biome": "^2.3.8",
      "@nuxt/content": "^3.8.2",
      "@types/bun": "^1.3.3",
      "@unocss/nuxt": "^66.5.9",
      "eslint": "^9.39.1",
      "iconify-icon": "^3.0.2",
      "lint-staged": "^16.2.7",
      "motion-v": "^1.7.4",
      "nuxt": "^4.2.1",
      "ora": "^9.0.0",
      "picocolors": "^1.1.1",
      "prompts": "^2.4.2",
      "turbo": "^2.6.1",
      "unbuild": "^3.6.1",
      "unocss": "^66.5.9",
      "vite": "^7.2.6",
      "vite-plugin-compression": "^0.5.1",
      "vite-plugin-vue-devtools": "8.0.5",
      "vitepress": "^1.6.4",
      "vue": "^3.5.25",
      "vue-router": "^4.6.3"
    }
  }
}
