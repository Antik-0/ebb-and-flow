{
  "name": "ebb-and-flow",
  "version": "2.0.0",
  "description": "潮起潮落的个人博客",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.6",
  "scripts": {
    "boot": "bun install && bun stub",
    "build": "turbo run build --filter=docs",
    "clean": "bun run ./scripts/cleanup.ts",
    "dev": "turbo run dev --filter=docs",
    "dev:next": "turbo run dev --filter=docs-next",
    "eslint": "eslint --fix --cache --cache-location=.temp/.eslintcache",
    "lint": "biome check --fix && bun run eslint",
    "lint:debug": "bunx @eslint/config-inspector@latest",
    "prepare": "bun run --filter docs prepare",
    "preview": "turbo run preview --filter=docs",
    "stub": "turbo run stub",
    "up-deps": "bun run ./scripts/upgrade.ts"
  },
  "lint-staged": {
    "*.{ts,vue,json}": [
      "bun biome check --fix"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@config/eslint": "workspace:*",
    "@config/tsconfig": "workspace:*",
    "@config/unocss": "workspace:*",
    "@types/bun": "catalog:",
    "eslint": "catalog:",
    "lint-staged": "catalog:",
    "ora": "catalog:",
    "picocolors": "catalog:",
    "prompts": "catalog:",
    "turbo": "catalog:",
    "unbuild": "catalog:",
    "unocss": "catalog:"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "packages/configs/*"
    ],
    "catalog": {
      "@biomejs/biome": "^2.3.11",
      "@iconify-icon/react": "^3.0.3",
      "@mdx-js/loader": "^3.1.1",
      "@mdx-js/react": "^3.1.1",
      "@next/mdx": "^16.1.3",
      "@nuxt/content": "^3.11.0",
      "@types/bun": "^1.3.6",
      "@types/mdx": "^2.0.13",
      "@types/node": "25.0.9",
      "@types/react": "19.2.8",
      "@types/react-dom": "19.2.3",
      "@unocss/nuxt": "^66.6.0",
      "@unocss/postcss": "66.5.10",
      "@unocss/preset-wind4": "^66.6.0",
      "@unocss/reset": "^66.6.0",
      "eslint": "^9.39.2",
      "iconify-icon": "^3.0.2",
      "lint-staged": "^16.2.7",
      "motion": "^12.27.1",
      "motion-v": "^1.9.0",
      "next": "^16.1.3",
      "nuxt": "^4.2.2",
      "ora": "^9.0.0",
      "picocolors": "^1.1.1",
      "prompts": "^2.4.2",
      "react": "^19.2.3",
      "react-dom": "^19.2.3",
      "turbo": "^2.7.5",
      "typescript": "^5.9.3",
      "unbuild": "^3.6.1",
      "unocss": "^66.6.0",
      "vue": "^3.5.27",
      "vue-router": "^4.6.4",
      "zod": "^4.3.5"
    }
  }
}
