{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@config/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": "./",
    "paths": {
      "#/*": ["*"],
      "@/*": ["assets/*"]
    },

    "types": ["vite/client"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    ".vitepress/theme/**/*.ts",
    ".vitepress/theme/**/*.vue",
    ".vitepress/config.ts"
  ]
}
