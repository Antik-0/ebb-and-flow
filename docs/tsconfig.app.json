{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@config/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    /* Paths */
    "baseUrl": "./",
    "paths": {
      "#/*": ["*"],
      "@/*": ["assets/*"]
    }
  },
  "files": ["vite-env.d.ts"],
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    ".vitepress/theme/**/*.ts",
    ".vitepress/theme/**/*.vue"
  ]
}
